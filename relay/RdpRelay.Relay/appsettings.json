{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting": "Information"
    }
  },
  "AllowedHosts": "*",
  "Relay": {
    "PublicHost": "localhost",
    "PublicPort": 443,
    "Bind": ":443",
    "WssPath": "/api/agent",
    "InternalPort": 8080,
    "ConnectTimeout": "00:00:30",
    "SessionTimeout": "08:00:00",
    "AllowedOperatorCidrs": [ "0.0.0.0/0" ],
    "EnableConnectCodes": true,
    "ConnectCodeExpiry": "00:05:00"
  },
  "Jwt": {
    "Issuer": "https://portal.local",
    "Audience": "relay",
    "SigningKey": "your-super-secret-jwt-signing-key-32-chars-minimum-length",
    "SessionTtl": "00:01:00"
  },
  "ConnectionStrings": {
    "Redis": ""
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/relay-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
